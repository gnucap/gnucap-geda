#!/bin/bash

# small gnucap command wrapper
# Author: Felix Salfelder 2012
# License: GPLv3

# implementation note:
# passing "list > output" would be much more canonical, but neither "list >
# file" nor a quiet switch (to disable sign-on) is implemented using bash
# builtin exec and /dev/fd/3 for now.

helptext="convert geda schematics to verilog/spice\n\
synopsis: $1 [-s|-v|-g] [-d] [-o outfile] file.sch"

[ -z $1 ] && echo -e $helptext

GUILE_WARN_DEPRECATED=no
target=verilog
dot=
printcmd=no
output="&1"
module=lang_geda.so

while [ ! -z $1 ]; do

	case $1 in
		*.sch)
			if [ $printcmd = "yes" ]; then
				echo -e "gschem
include $1
$target
$dot""list
$dot""end"
			else
				eval "exec 3>$output"
				echo -e "gschem
include $1
$target
$dot> /dev/fd/3
$dot""list
$dot""end" | gnucap -a $module >/dev/null
				exec 3>&-
			fi
			;;
		-c|--command)
			printcmd=yes
			;;
		-h|--help)
			echo -e $helptext
			;;
		-s|--spice)
			target=spice
			dot=.
			;;
		-p|--spectre)
			target=spectre
			dot=
			;;
		-v|--verilog)
			target=verilog
			dot=
			;;
		-g|--geda|gschem)
			target=gschem
			dot=
			;;
		-d)
			GUILE_WARN_DEPRECATED=detailed
			;;
		-o)
			shift
			output="$1"
			;;
		*)
			echo unknown argument: $1
			;;
	esac
	shift
done

